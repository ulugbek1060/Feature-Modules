<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="12dp"
                android:top="6dp"
                android:bottom="6dp"
                android:right="12dp">
                <shape android:shape="rectangle">
                    <solid android:color="#f5f5f5" />
                    <corners android:radius="6dp" />
                    <padding
                        android:left="24dp"
                        android:top="18dp"
                        android:bottom="18dp"
                        android:right="18dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="12dp"
                android:top="6dp"
                android:bottom="6dp"
                android:right="12dp">
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />
                    <corners android:radius="6dp" />
                    <padding
                        android:left="24dp"
                        android:top="18dp"
                        android:bottom="18dp"
                        android:right="18dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
